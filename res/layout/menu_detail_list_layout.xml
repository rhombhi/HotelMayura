<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<Button
		android:id="@+id/detail_item_pic"
		android:layout_width="100px"
		android:layout_height="100px"
		android:layout_margin="10px"
		android:focusable="false"/>
	<TextView 
        android:id="@+id/detail_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10px"
        android:textSize="20px"
        android:layout_gravity="center_vertical"
		android:layout_toRightOf="@id/detail_item_pic"/>
	<TextView 
        android:id="@+id/detail_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10px"
        android:textSize="20px"
        android:layout_gravity="center_vertical"
		android:layout_toRightOf="@id/detail_item_name"/>
	<TextView 
        android:id="@+id/detail_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10px"
        android:textSize="20px"
        android:layout_gravity="center_vertical"
		android:layout_toRightOf="@id/detail_item_pic"
		android:layout_below="@id/detail_item_name"/>
</RelativeLayout>