<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<Button
		android:id="@+id/detail_item_pic"
		android:layout_width="100px"
		android:layout_height="100px"
		android:layout_margin="10px"
		android:focusable="false"
		android:background="@drawable/appetizers"/>
	<TextView 
        android:id="@+id/detail_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="45px"
        android:textSize="25px"
        android:layout_gravity="center_vertical"
		android:layout_toRightOf="@id/detail_item_pic"
		android:textColor="@color/gray"/>
	<TextView 
        android:id="@+id/detail_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10px"
        android:textSize="25px"
        android:layout_gravity="center_vertical"
		android:layout_alignParentRight="true"
		android:textColor="@color/white"/>
	<TextView 
        android:id="@+id/detail_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10px"
        android:textSize="20px"
        android:layout_gravity="center_vertical"
		android:layout_toRightOf="@id/detail_item_pic"
		android:layout_below="@id/detail_item_name"
		android:layout_marginTop="5px"
		android:textColor="@color/white"
		android:textStyle="italic"/>
</RelativeLayout>